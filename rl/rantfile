
rll_objs = %w(rlcore.o)

desc "lib file"
task "librl.a" => rll_objs do |t|
	sys "ar rsv librl.a #{rll_objs.join(' ')}"
	sys.cp "librl.a",".."
end



file "xlibrl.a"  do
	rll_objs.each do |c|
		sys "#{CC} -O2 -c #{c}"
	end

	xx = Dir["*.o"]

	sys "ar rsv librl.a #{xx.join(' ')}"
	sys.cp "librl.a",".."
end

desc "Cleanup..."
task :clean do
	x = Dir["*.{bak,o,obj,a,lib}"]

	if x.length > 0
		sys.rm_rf x
	end
end
